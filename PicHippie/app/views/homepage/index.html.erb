<div class="container">
<% @gallery.each do | art | %>
	<div class="row">
    <div class="col s6">
      <div class="card ">
        <div class="card-image">
          <img src=<%= art.image_url %> >
        </div>
        <div class="card-content">
          <p>Created by: <%= art.art_maker %></p>
        </div>
      </div>
    </div>  
    <div class="col s4">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Description</span>
          <p><%= art.art_description %></p>
        </div>
      </div>
    </div>
  </div>
<% end %> 
<%= will_paginate @gallery, renderer: MaterializePagination::Rails %> 
</div>

	